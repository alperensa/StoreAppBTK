@model IEnumerable<Order>

    @if(Model.Count() > 0)
    {
        @foreach(var order in Model)
        {
            <div class="my-3">
                <partial name="_OrderDetails" model="@order" />
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            <p class="lead">There are no orders yet.</p>
        </div>
    }