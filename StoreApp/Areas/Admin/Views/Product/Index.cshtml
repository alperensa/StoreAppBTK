@model IEnumerable<Product>

<div class="text-center">
	<div class="display-6">
		Products
	</div>
	<div class="d-flex justify-content-end my-3">
		<a class="btn btn-outline-success" asp-action="Create">
			<i class="fa fa-plus"></i>
			Create
		</a>
	</div>
	<table class="table table-striped table-hover">
		<thead>
			<th>ID</th>
			<th>Image</th>
			<th>Product Name</th>
			<th>Price</th>
			<th>Operations</th>
		</thead>
		<tbody>
			@foreach(Product prd in Model)
			{
				<tr>
				<td>@prd.ProductId</td>
				<td>
					<img src="@prd.ImageUrl" alt="@prd.ProductId" class="border border-light rounded" width="50"/>
				</td>
				<td>@prd.ProductName</td>
				<td>@prd.Price.ToString("c")</td>
				<td>
					<div class="btn-group">
						<a class="btn btn-warning" 
							data-toggle="tooltip"
							data-placement="top"
							title="Edit"
						asp-action="Update" asp-route-id="@prd.ProductId">
							<i class="fa fa-edit"></i>
							
						</a>
						
						<a class="btn btn-danger" 
						data-toggle="tooltip"
							data-placement="top"
							title="Delete"
						asp-action="Delete" asp-route-id="@prd.ProductId">
							<i class="fa fa-trash"></i>
							
						</a>
							
						<a class="btn btn-info" 
						data-toggle="tooltip"
							data-placement="top"
							title="Product Page"
						target="_blank" asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@prd.ProductId">
							<i class="fa fa-search"></i>
							
						</a>
					</div>
				</td>
				</tr>
			}
		</tbody>
	</table>
</div>

@section Scripts
{
	<script type="text/javascript">
	$(document).ready(()=>{
		$('[data-toggle="tooltip"]').tooltip()
	});
	</script>
}