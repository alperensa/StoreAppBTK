@model Product

    <div class="row">
        <div class="col-md-12">
            <div class="text-center">
                <h6 class="display-6">
                    @Model.ProductName
                </h6>

                <img class="img-fluid rounded-3 shadow my-3" src="@Model.ImageUrl" alt="@Model.ProductName"/>
                <p class="lead fw-bold">@Model.Price.ToString("c")</p>
            </div>
        </div>
    </div>

<div class="text-center">

<div class="btn-group">
    <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index">
        <i class="fa-solid fa-house"></i>
        Home</a>
        <form id="@Model.ProductId" method="post" asp-page="/cart">
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden"  name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
        <button type="submit" class="btn btn-outline-primary">
            Add To Cart
            <i class="fa fa-cart-plus"></i>
        </button>
        </form>
    <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index">
        <i class="fa-solid fa-list"></i>
        Products</a>
</div>
</div>

@section Header{
    <div>
        Header for only Get
    </div>
}