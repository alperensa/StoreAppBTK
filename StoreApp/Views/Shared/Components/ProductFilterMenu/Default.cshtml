<div class="my-3">
    Filters
    <a class="fa fa-filter"></a>
</div>

<div class="my-2">
    <form method="get" asp-action="Index">
        <div class="form-group">
            <input type="hidden" name="categoryId" value="@(Context.Request.Query["categoryId"])">
            <div class="form-group my-2">
                <input class="form-control" name="SearchTerm" placeholder="Search"/>
            </div>
            <div class="form-group my-2">
                <input class="form-control" name="MinPrice" placeholder="Min Price"/>
            </div>
            <div class="form-group my-2">
                <input class="form-control" name="MaxPrice" placeholder="Max Price"/>
            </div>
            <div class="form-group my-2 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Filter</button>
            </div>
        </div>
    </form>
</div>